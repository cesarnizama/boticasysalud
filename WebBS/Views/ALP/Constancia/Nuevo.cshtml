
@{
    ViewBag.Title = "Nueva Constancia Preparado";
}

<h2>Nueva Constancia Preparado</h2>

@using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <fieldset disabled>
        <legend></legend>
        <div class="form-group disabled">
            <label for="txtNroOrden" class="col-sm-2 control-label">Nro Orden</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtNroOrden" placeholder="Nro Orden" value="@ViewBag.nroOperacion">
            </div>
        </div>
        <div class="form-group disabled">
            <label for="txtNroOrden" class="col-sm-2 control-label">Nombre Preparado</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtNroOrden" placeholder="Nombre Preparado" value="@ViewBag.nroOperacion">
            </div>
        </div>
        <div class="form-group disabled">
            <label for="txtTecnico" class="col-sm-2 control-label">Encargado</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="txtTecnico" placeholder="Encargado" value="@ViewBag.empleado">
            </div>
        </div>
        <div class="form-group disabled">
            <label for="txtFecConstancia" class="col-sm-2 control-label">Fecha Constancia</label>
            <div class="col-sm-10">
                <input type="date" class="form-control" id="txtFecConstancia">
            </div>
        </div>
    </fieldset>

    <fieldset>
        <div class="panel panel-default">
            <!-- Table -->
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Código Insumo</th>
                            <th>Insumo</th>
                            <th>Unidad de Medida</th>
                            <th>Cantidad</th>
                            <th>Cantidad Real</th>
                            <th>Diferencia</th>
                        </tr>
                    </thead>
                    <tbody id="tbOrdenInsumoContent"></tbody>

                </table>
            </div>
        </div>
    </fieldset>

    <br />

    <div class="row">
        <div class="col-md-1"><a id="btnGuardar" class="btn btn-primary">Guardar</a></div>
        <div class="col-md-1">@Html.ActionLink("Cancelar", "Index", "Constancia", new { @class = "btn btn-danger" })</div>
    </div>

}

